{
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "target": "es5",
    "rootDir": "src",
    "outDir": "build",
    "module": "esnext",
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "index.tsx"],
  "exclude": ["**/src/__tests__/**", "build"]
}
